@model IEnumerable<Infraestructure.Models.DEPARTAMENTO>

@{
    ViewBag.Title = "Departamentos";

}
<br />
<br />
<br />
<h2>Administrar Departamentos</h2>

<p>
    <a href="@Url.Action("Create", "Create")" class="btn btn-success" data-toggle="tooltip" data-placement="right" title="Crear Registro">
        <i class="fas fa-plus-circle awsomeNav"></i>  
        <strong>Nuevo Registro</strong>
    </a>
</p>

<table class="table table-bordered tablelist table-responsive" align="center">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            Ubicación
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tarifa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            Ver departamento
        </th>

        <th>
            Acciones
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @switch (item.IdUbicacion)
                {
                    case 1:
                        <p>Alajuela Centro, Alajuela</p>

                        break;
                    case 2:
                        <p>San Ramon, Alajuela</p>

                        break;
                    case 3:
                        <p>Desamparados Centro, San Jose</p>

                        break;
                    case 4:
                        <p>Heredia Centro, Heredia</p>

                        break;
                    case 5:
                        <p>Dulce Nombre de Naranjo, Alajuela</p>

                        break;
                    default:
                        <p class="text-danger">No disponible</p>
                        break;
                }
            </td>

            <td>
                $@Html.DisplayFor(modelItem => item.Tarifa)
            </td>
            <td>
                @if (item.Estado.Value == true)
                {
                    <p class="text-success"><strong>Disponible</strong></p>
                }
                else
                {
                    <p class="text-danger"><strong>No Disponible</strong></p>
                }
                @*@Html.DisplayFor(modelItem => item.Estado)*@
            </td>
            <td>

                <img src="@Html.DisplayFor(modelItem => item.Imagen)" width="150px" class="m-0" />
            </td>
            <td align="center">
                @*@Html.ActionLink("Editar", "Edit", new { id = item.Id })*@
                <a href="@Url.Action("Editar", "Edit", new { id = item.Id })" class="btn btn-warning" data-toggle="tooltip" data-placement="bottom" title="Editar">
                    <i class="fas fa-edit"></i>  Editar
                </a><br /><br />

                <a href="@Url.Action("Details", "Departamento", new { id = item.Id })" class="btn btn-info" data-toggle="tooltip" data-placement="bottom" title="Ver Detalles">
                    <i class="fas fa-info-circle"></i>  Detalles
                </a><br /><br />

                <a href="@Url.Action("Eliminar", "Delete", new { id = item.Id })" class="btn btn-danger" data-toggle="tooltip" data-placement="bottom" title="Descartar Registro">
                    <i class="fas fa-trash-alt"></i>  Descartar
                </a><br /><br />
            </td>
        </tr>
    }
</table>




