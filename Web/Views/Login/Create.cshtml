@model Infraestructure.Models.USUARIO

@{
    ViewBag.Title = "Crear Cuenta";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<br />
<br />
<br />
<h2 class="textcolor">Crear Cuenta</h2>

@using (Html.BeginForm("Save", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" align="center">
    <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2 textcolor" })

            <div class="col-md-4">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Apellido1, htmlAttributes: new { @class = "control-label col-md-2 textcolor" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Apellido1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Apellido1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Apellido2, htmlAttributes: new { @class = "control-label col-md-2 textcolor" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Apellido2, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Apellido2, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Correo, htmlAttributes: new { @class = "control-label col-md-2 textcolor" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Telefono, htmlAttributes: new { @class = "control-label col-md-2 textcolor" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Sexo, htmlAttributes: new { @class = "control-label col-md-2 textcolor" })
            <div class="col-md-4">

                <div class="col-md-10">
                    <span class="textcolor">Masculino</span> @Html.RadioButtonFor(model => model.Sexo, 'M')
                    <span class="textcolor">Femenino</span> @Html.RadioButtonFor(model => model.Sexo, 'F')
                    @Html.ValidationMessageFor(model => model.Sexo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FechaNacimiento, htmlAttributes: new { @class = "control-label col-md-2 textcolor" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.FechaNacimiento, new { htmlAttributes = new { @class = "form-control datepicker" } })
                @Html.ValidationMessageFor(model => model.FechaNacimiento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Clave, htmlAttributes: new { @class = "control-label col-md-2 textcolor" })
            <div class="col-md-4">
                @Html.PasswordFor(model => model.Clave, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Clave, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <input type="submit" value="Registrar" class="btn btn-success" />
            </div>
        </div>

</div>
}

<div class="text-center">
    <a href="@Url.Action("Index", "Login")" class="btn btn-primary text-center" data-toggle="tooltip" data-placement="bottom" title="Volver">
        <i class="fas fa-arrow-left"></i> Volver
    </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

