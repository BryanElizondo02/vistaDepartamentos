@model IEnumerable<Infraestructure.Models.DEPARTAMENTO>

@{
    ViewBag.Title = "Index";
}

<br />
<h2>Departamentos</h2>

<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <div class="card" id="carta">
                    <div class="card-header bg-success" id="cardHead">
                        <label>@Html.DisplayFor(modelItem => item.Nombre)</label>
                    </div>
                    <div class="card-body" id="cardBody" align="center">
                        <img src="@Html.DisplayFor(modelItem => item.Imagen)" class="m-0 img-responsive imgCatalogo" data-toggle="tooltip" data-placement="bottom" title="@Html.DisplayFor(modelItem => item.Nombre)" /><br />
                    </div>
                    <div class="card-footer text-center" id="cardFoot">
                        
                        @switch (item.IdUbicacion)
                        {
                            case 1:
                                <p>Alajuela Centro, Alajuela</p>

                                break;
                            case 2:
                                <p>San Ramon, Alajuela</p>

                                break;
                            case 3:
                                <p>Desamparados Centro, San Jose</p>

                                break;
                            case 4:
                                <p>Heredia Centro, Heredia</p>

                                break;
                            case 5:
                                <p>Dulce Nombre de Naranjo, Alajuela</p>

                                break;
                            default:
                                <p class="text-danger">No disponible</p>
                                break;
                        }
                        <div>
                            <a href="@Url.Action("Details", "Departamento", new { id = item.Id })" class="btn btn-info" data-toggle="tooltip" data-placement="bottom" title="Ver Departamento">
                                <i class="fas fa-info-circle"></i>  Detalles
                            </a>
                            <a href="@Url.Action("Reservacion", "Reservacion", null)" class="btn btn-success" data-toggle="tooltip" data-placement="bottom" title="Reservar">
                                Reservar por <i class="text-danger price">$@Html.DisplayFor(modelItem => item.Tarifa)</i>
                                <i class="fas fa-check-circle"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <br />
                <br />
            </div>

        }

    </div>
</div>
